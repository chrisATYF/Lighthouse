@model IEnumerable<Lighthouse.Models.MissionGroup>
@{
    ViewBag.Title = "Index";
}

@Html.Partial("_NavLayout")
<div class="">
    <p>This is the mission group index page</p>
    @if (!Model.Any())
    {
        <p>There aren't any groups right now. Start one <a href="@Url.RouteUrl("MissionAdd")">here</a></p>
    } 
    else
    {
        <p><a href="@Url.RouteUrl("MissionAdd")">Add Group</a></p>

        foreach (var group in Model)
        {
            <p><a href="@Url.RouteUrl("MissionGroup", new { groupId = group.Id })">@group.GroupName</a></p>
            <p>@group.Country</p>
            <span>@group.DateCreatedHumanized</span>
        }
    }
</div>
